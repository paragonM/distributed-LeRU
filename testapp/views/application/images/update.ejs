  <script>




    function move(){
      var forme = document.getElementById("funform");
      var goods = document.getElementById("goods");

  //    goods.setAttribute('value',goods.value+ <%=quantity%>);
goods.value = parseInt(goods.value)+parseInt(<%=quantity%>);

      forme.submit();

    }
  </script>
